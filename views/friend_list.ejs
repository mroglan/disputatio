<div class="d-flex" id="wrapper">
	<%- include('./partials/side_nav.ejs') %>
	<div id="page-content-wrapper">
		<%- include('./partials/top_nav.ejs') %>
		<div class="container" style="background:rgba(191,172,172,.5);min-height:100vh">
			<div class="row bg-primary pt-5">
				<div class="text-center col-12"><h1 class="display-3 text-light">Your Friends</h1></div>
			</div>
			<div class="row mt-3">
				<% if(friends.length == 0) { %>
					<p>You have no friends currently :( %>
				<% } else { %>
					<% friends.forEach(function(friend) { %>
						<div class="col-xl-3 col-lg-4 col-sm-6">
							<div class="card">
								<div class="friend_pic_div overflow-hidden rounded-circle mx-auto">
									<img class="img-fluid" style="min-width:100%;min-height:100%" src="<%= friend.picture || '/images/blank_profile.png' %>">
								</div>
								<div class="card-body">
									<h3 class="card-title text-center overflow-hidden"><%= friend.name %></h3>
									<div class="card-subtitle text-center">&lt;<%= friend.tag %>&gt;</div>
								</div>
								<input type="hidden" id="friend_id" value="<%= friend._id %>">
								<div class="card-footer">
									<div class="text-center"><button type="button" class="btn btn-danger">Remove</button></div>
								</div>
							</div>
						</div>
					<% }); %>
				<% } %>
			</div>
		</div>
	</div>
</div>