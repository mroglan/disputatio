<div class="d-flex" id="wrapper">
	<%- include('./partials/side_nav.ejs') %>
	<div id="page-content-wrapper">
		<%- include('./partials/top_nav.ejs') %>
		<div class="container" style="min-height:100vh">
			<div class="row">
				<div class="col-12 bg-primary pt-5">
					<h1 class="display-3 text-center text-light"><%= group.name %></h1>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-6 mx-auto">
					<div class="card card-body">
						<h1 class="text-center card-title">Update</h1>
						<form method="POST" action="">
							<div class="form-group row no-gutters">
								<label class="col-lg-2 col-form-label" for="name">Name: </label>
								<div class="col-lg-10 pl-3">
									<input type="text" class="form-control" id="name" name="name" placeholder="My Group" required value="<%= group.name %>">
								</div>
							</div>
							<div class="form-group row no-gutters">
								<label class="col-lg-2 col-form-label" for="status">Status: </label>
								<div class="col-lg-10 pl-3">
									<select type="select" id="status" name="status" class="custom-select" required>
										<% if(group.status === 'open') { %>
											<option value="open" selected>Open</option>
											<option value="invite_only">Invite Only</option>
											<option value="closed">Closed</option>
										<% } else if(group.status === 'invite_only') { %>
											<option value="open">Open</option>
											<option value="invite_only" selected>Invite Only</option>
											<option value="closed">Closed</option>
										<% } else { %>
											<option value="open">Open</option>
											<option value="invite_only">Invite Only</option>
											<option value="closed" selected>Closed</option>
										<% } %>
									</select>
								</div>
							</div>
							<div class="form-group row no-gutters d-none" id="closed-code">
								<label class="col-lg-4 col-form-label" for="code">Group Entry Code: </label>
								<div class="col-lg-8 pl-3">
									<input type="text" class="form-control" id="code" name="code" placeholder="you shall not pass" value="<%= group.code %>">
								</div>
							</div>
							<div class="form-group row no-gutters">
								<label class="col-lg-12 col-form-label" for="description">Description: </label>
								<div class="col-lg-12 pl-3">
									<textarea type="text" rows="3" class="form-control" name="description" id="description" placeholder="My group's description"><%= group.description %></textarea>
								</div>
							</div>
							<div class="form-group row no-gutters">
								<label for="picture" class="col-6 col-form-label">Picture (optional): </label>
								<div class="col-6 pl-3">
									<button id="pic-btn" type="button" class="btn btn-primary" data-toggle="tooltip" data-placement="right" data-html="true" title="Only .png, .jpg and .jpeg allowed!">
										<i class="fas fa-exchange-alt"></i>
									</button>
									<input type="file" id="pic-file" class="hidden">
								</div>
								<div style="width:100px" class="border rounded-circle overflow-hidden" id="group-pic-preview">
									<img type="hidden" class="img-fluid" style="min-width:100%;min-height:100%" src="<%= group.picture || '/images/oort-cloud.jpg' %>">
								</div>
								<input type="hidden" name="picture_path" id="picture_path" value="<%= group.picture || '/images/oort-cloud.jpg' %>">
							</div>
							<button type="submit" class="btn btn-success">Update</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<style>
	.hidden {
		width: 0;
		height: 0;
		overflow: hidden;
	}
</style>